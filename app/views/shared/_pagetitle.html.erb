<div class="row">
  <div class="col s12">
    <h5 class="ob-text-primary ob-shadow left"><strong><%= description %></strong></h5>
    <% if current_page?(:controller => page_model.pluralize, :action => 'index') %>
      <%= link_to eval("new_#{page_model}_path"), class: "btn waves-effect waves-light right z-depth-2" do %>
        <i class="material-icons left">add</i><%= page_model %>
      <% end %>
    <% end %>
  </div>
</div>