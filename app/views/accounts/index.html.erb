<div class="row">
  <div class="col s12">
    <h5 class="ob-text-primary ob-shadow left"><strong>Accounts</strong></h5>
    <%= link_to new_account_path, class: "btn waves-effect waves-light right z-depth-2" do %>
      <i class="material-icons left">add</i>Account
    <% end %>
  </div>
</div>

<div class="row">
  <% @accounts.each do |account| %>
    <div class="col s12 l4">
      <div class="card ob-account-card ob-card-gradient hoverable z-depth-2">
        <div class="card-content">
          <div class="row ob-no-bottom valign-wrapper">
            <%= link_to(account_transactions_path(account.id), class: "ob-linked-card") do %>
              <div class="card-title col s12 ob-text-primary ob-shadow"><strong><%= account.name %></strong></div>
            <% end %>
          </div>
          
          <div class="row ob-no-bottom">
            <div class="col s12 right-align valign-wrapper valign-fix ob-text-primary"><i class="tiny material-icons">account_balance</i>&nbsp;<strong>Balance</strong></div>
          </div>

          <div class="row ob-no-bottom">
            <div class="col s12 right-align text-muted" style="font-size: 22pt" data-badge-caption=""><%= number_to_currency(account.current_balance) %></div>
          </div>

          <div class="row ob-no-bottom">
            <div class="col s12 right-align"><small>as of <%= account.updated_at.strftime('%b %d, %Y @ %I:%M %p') %></small></div>
          </div>

        </div>

        <div class="card-action">
              <%= link_to "Edit", edit_account_path(account), class: "ob-text-primary tooltipped", :'data-position' => "top", :'data-tooltip' => "Edit Account" %>
              <%= link_to "Delete", account, method: :delete, data: { confirm: 'Are you sure you want to delete the account?' }, class: "ob-text-primary tooltipped", :'data-position' => "top", :'data-tooltip' => "Delete Account" %>

        </div>
      </div>
    </div>
  <% end %>
</div>

