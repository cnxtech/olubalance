<h3>My Accounts</h3>
<div class="row">
  <div class="col s12">
    <%= link_to "Add Account", new_account_path, class: "btn waves-effect waves-light right" %>
  </div>  
</div>

<div class="row">
    <% @accounts.each do |account| %>
      <div class="col s12 m4">
      <div class="card darken-1 hoverable">
          <div class="card-content">
            <span class="card-title"><strong><%= account.name %></strong></span>
            <small>Account last updated on <%= account.updated_at.strftime('%b %d, %Y @ %I:%M %p') %></small>
          </div>
          <div class="card-action text-muted">
            <strong>Current Balance</strong><span class="new badge" style="font-size: 14pt" data-badge-caption=""><strong><%= number_to_currency(account.current_balance) %></strong></span>
          </div>
      </div>
    </div>
    <% end %>
</div>

