<div class="row">
  <div class="col s12">
    <h5 class="ob-text-primary ob-shadow left"><strong>Inactive Accounts</strong></h5>
  </div>
</div>

<div class="row">
  <div class="col s12">
    <h6>Accounts listed here are for historical purposes only. If you wish to view the transactions of an inactive account, you must first reactivate it.</h6>
  </div>
</div>

<% if !@accounts.exists? then %>
      <div class="row">
        <div class="col s12 m8 offset-m2">
          <div class="card ob-card-gradient ob-account-card">
            <div class="card-content ob-text-primary">
              <span class="card-title">Welcome to olubalance!</span>
              <div class="row">
                <br />
                <div class="col s1"><i class="material-icons valign-wrapper">account_balance</i></div>
                <div class="col s11">
                You have no inactive accounts :)</div>
              </div>
            </div>
          </div>
        </div>
      </div>
<% end %>

<div class="row">
  <% @accounts.each do |account| %>
    <div class="col s12 m6 l6 xl4">
      <div class="card ob-account-card ob-card-gradient hoverable z-depth-2">
          <div class="card-content">
            <div class="row ob-no-bottom valign-wrapper">
              <div class="card-title col s12 ob-text-primary ob-shadow"><strong><%= account.name %><% if account.last_four.present? then %> ( ... <%= account.last_four %>)<% end %></strong></div>
            </div>
            
            <div class="row ob-no-bottom">
              <div class="col s12 right-align valign-wrapper valign-fix ob-text-primary"><i class="tiny material-icons">account_balance</i>&nbsp;<strong>Balance</strong></div>
            </div>

            <div class="row ob-no-bottom">
              <div class="col s12 right-align <%= if account.current_balance >= 0 then 'text-muted' else 'red-text' end %>" style="font-size: 22pt" data-badge-caption=""><%= number_to_currency(account.current_balance) %></div>
            </div>

            <div class="row ob-no-bottom">
              <div class="col s12 right-align text-muted"><small>as of <%= account.updated_at.in_time_zone(current_user.timezone).strftime('%b %d, %Y @ %I:%M %p %Z') %></small></div>
            </div>

          </div>

        <div class="card-action right-align">
              <%= link_to "Reactivate", activate_account_path(account), class: "ob-text-primary tooltipped", :'data-position' => "top", :'data-tooltip' => "Reactivate Account" %>
              <a class="modal-trigger ob-text-primary tooltipped" data-position="top", data-tooltip="Delete Account" href="#delete-account">Delete</a>
        </div>
      </div>
    </div>

              <div id="delete-account" class="modal">
                <div class="modal-content ob-text-primary">
                  <h4>Delete <%= account.name %>?</h4>
                  <p>Are you sure you wish to delete this account? All transactions will be lost!</p>
                </div>
                <div class="modal-footer">
                  <a href="#!" class="modal-action modal-close waves-effect waves-light btn-flat ob-text-primary">Cancel</a>
                  <%= link_to "Delete", account, method: :delete, class: "modal-action modal-close waves-effect waves-light btn-flat ob-text-primary", :'data-position' => "top", :'data-tooltip' => "Delete Account" %>
                </div>
              </div>

  <% end %>
</div>